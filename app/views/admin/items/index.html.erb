<% if !flash[:notice].blank? %>
	<div class = "alert alert-info">
		<%= flash[:notice] %>
	</div>
	<br/>
<% end %>

<%= link_to "New Resume", new_admin_item_path %>
<br/>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Download Link</th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
			<tr>
				<td><%= item.name %></td>
				<td><%= link_to "Download Item", item.attachment_url%></td>
				<td><%= button_to "Delete", admin_item_path(item) , :method => :delete, confirm: "Are you sure" %></td>
			</tr>
		<% end %>
	</tbody>
</table>
