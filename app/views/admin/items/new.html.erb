<% if !@item.errors.empty? %>
	<div class="alert alert-error">
		<ul>
			<% @item.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for ([:admin ,@item]), html: {multipart: true} do |f|%>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :attachment %>
	<%= f.file_field :attachment %>
	<%= f.submit "Save" %>
<% end %>
