<% if !flash[:notice].blank? %>
	<div class = "alert alert-info">
		<%= flash[:notice] %>
	</div>
	<br/>
<% end %>

<%= link_to "New Resume", admin_new_resume_path %>
<br/>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Download Link</th>
		</tr>
	</thead>

	<tbody>
		<% @resumes.each do |resume| %>
			<tr>
				<td><%= resume.name %></td>
				<td><%= link_to "Download Resume", resume.attachment_url %></td>
				<td><%= button_to "Delete", resume, :method => :delete, confirm: "Are you sure" %></td>
			</tr>
		<% end %>
	</tbody>
</table>
